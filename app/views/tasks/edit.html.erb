<h1>Edit Task</h1>
<div>
<%= form_with model: @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <% unless f.object.new_record? %>
  <%= f.check_box :completed %>
  <% end %>
  <%= f.submit %>
<% end %>
</div>

<div>
<%= link_to "Go back to index", tasks_path%>
</div>
